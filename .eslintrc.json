{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["eslint:recommended"],
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module"
  },
  "rules": {
    "indent": ["error", 2],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "no-unused-vars": "warn",
    "no-console": "off",
    "prefer-const": "error",
    "no-var": "error",
    "arrow-spacing": "error",
    "object-curly-spacing": ["error", "always"],
    "space-before-blocks": "error",
    "keyword-spacing": "error"
  },
  "globals": {
    "console": "readonly",
    "window": "readonly",
    "document": "readonly",
    "localStorage": "readonly",
    "fetch": "readonly",
    "URLSearchParams": "readonly",
    "AbortController": "readonly",
    "requestAnimationFrame": "readonly",
    "setTimeout": "readonly",
    "clearTimeout": "readonly",
    "setInterval": "readonly",
    "clearInterval": "readonly",
    "performance": "readonly",
    "navigator": "readonly"
  }
}